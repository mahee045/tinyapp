<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <!-- Conditional Display: Username or Login Form -->
    <% if (username) { %>
      <!-- Display username and logout button -->
      <span class="navbar-text">Logged in as: <%= username %></span>
      <form method="POST" action="/logout" class="form-inline" style="display: inline;">
        <button type="submit" class="btn btn-outline-danger btn-sm">Logout</button>
      </form>
    <% } else { %>
      <!-- Display login form -->
      <form method="POST" action="/login" class="form-inline">
        <input
          type="text"
          name="username"
          class="form-control mr-sm-2"
          placeholder="Enter username"
          required
        />
        <button type="submit" class="btn btn-outline-success btn-sm">Login</button>
      </form>
    <% } %>

    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>
</header>
