<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>

    <div class="navbar-nav ml-auto">
      <% if (user) { %>
        <!-- Display email and logout button for logged-in users -->
        <span class="navbar-text">Logged in as: <%= user.email %></span>
        <form method="POST" action="/logout" class="form-inline" style="display: inline;">
          <button type="submit" class="btn btn-outline-danger btn-sm ml-2">Logout</button>
        </form>
      <% } else { %>
        <!-- Display Register and Login links for guests -->
        <a href="/register" class="btn btn-outline-light btn-sm mr-2">Register</a>
        <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
      <% } %>
    </div>

    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
  </nav>
</header>
